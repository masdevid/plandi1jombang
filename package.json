{
  "name": "sd-plandi",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:production": "pnpm db:migrate && pnpm build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "server": "node server.js",
    "docker:up": "docker-compose --env-file .env.development up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart api",
    "docker:rebuild": "docker-compose up -d --build",
    "docker:prod": "docker-compose --env-file .env.production up -d",
    "db:migrate": "curl -X POST http://localhost:3001/db-migrate",
    "test:api": "node tests/test-api.js",
    "test:api:sh": "bash tests/test-api.sh",
    "test:quick": "bash tests/quick-test.sh",
    "setup": "bash start-and-test.sh",
    "dev": "pnpm docker:up && pnpm start",
    "api:install": "cd api-server && npm install"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@vercel/postgres": "^0.10.0",
    "@zxing/library": "^0.21.3",
    "@zxing/ngx-scanner": "^21.0.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ngx-scanner": "^0.0.0",
    "postgres": "^3.4.8",
    "qrcode": "^1.5.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@vercel/node": "^5.5.16",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}